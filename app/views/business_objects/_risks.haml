- if current_user.can_manage_risk?
  -model_name = controller_name.singularize
  -model_title = controller_name.singularize.titleize
  -instance = instance_variable_get("@" + model_name)
  -content_for :widget_title do
    Risks

  -content_for :widget_help, "#{model_name}_risks"

  -content_for :widget_id, "#{model_name}_risks_widget"

  %ul.tree-structure
    =render :partial => 'risk_object_tree', :locals => { :instance => instance, :is_root => true }
