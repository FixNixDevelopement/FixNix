-# locals: control, systems

%h3.tab-title
  Systems or Processes that implement this Control
  %a.btn.btn-mini.pull-right{ :href => list_edit_flow_system_controls_path(:control_id => control.id), :'data-toggle' => 'modal-ajax-relationship-selector', :'data-modal-reset' => 'reset', :'data-list-target' => 'refresh', :rel => 'tooltip', :'data-placement' => 'left', :title => 'Link systems/processes to this control', :'data-modal-class' => 'modal-wide' }
    %i.grcicon-link

%ul.tree-structure
  -systems.each_with_index do |system, i|
    %li{ :class => system.is_biz_process? ? "process" : "system" }
      .item-main
        .item-title
          .row-fluid
            =render :partial => 'object_leaf', :locals => { :instance => system }
          .item-actions
            %a{:href => flow_system_path(system.id), :class => "btn btn-mini", :rel => "tooltip" , :'data-placement' => "left", :title => "View Object"}
              %i.grcicon-goto
