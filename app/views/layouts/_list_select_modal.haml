.modal-header
  =yield_content!(:modal_buttons)
  -help_path = yield_content!(:modal_help)
  .pull-right
    -if !help_path.blank?
      %a.widgetbtn.btn.btn-mini{ :href => "/help/#{help_path}", :'data-toggle' => 'modal-ajax', :title => "Help - What is this?"}
        %i.grcicon-help-black
        
    %a.widgetbtn.btn.btn-mini{ :'data-dismiss' => 'modal', :href => 'javascript://'}
      %i.grcicon-x-grey
      
  %h2=yield_content!(:modal_title) || 'Add Object'

.modal-body
  =yield

.modal-footer
  .row-fluid
    .span12
      .deny-buttons
        %a.btn{:'data-dismiss' => 'modal-reset', :href => 'javascript://' } Cancel